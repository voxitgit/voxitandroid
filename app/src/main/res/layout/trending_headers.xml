<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/headingcolor"
                android:textStyle="bold"
                android:textSize="@dimen/normal_text_size_for_sub_header"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/s_margin_value"
                android:text="Trending" />
            <View
                android:layout_width="75dp"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/normal_margin_value"
                android:layout_marginTop="@dimen/small_margin_value"
                android:background="@color/titlecolor" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#00aaee"
                android:textStyle="bold"
                android:textSize="@dimen/normal_text_size_for_sub_header"
                android:text="V-Corner"
                android:id="@+id/tvVcorner"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="#00aaee"
                android:layout_below="@+id/tvVcorner"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HelpSupport">

    <include
        android:id="@+id/header_layout"
        layout="@layout/search_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@id/linear1"
                    android:layout_marginLeft="@dimen/normal_margin_value10"
                    android:layout_marginRight="@dimen/normal_margin_value10"
                    android:background="@drawable/new_jockey_screens">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabDots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_margin_value10"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/normal_margin_value10"
                    android:layout_marginBottom="@dimen/normal_margin_value10"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/your_backg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/help_round"
                        android:gravity="top|left"
                        android:hint="Your Background in brief"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:maxWidth="180dip"
                        android:minWidth="20.0dip"
                        android:padding="12dp"
                        android:scrollHorizontally="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size" />
                    <!--<EditText-->
                    <!--android:id="@+id/your_backg"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="Your Background"-->
                    <!--android:textSize="@dimen/normal_text_size"-->
                    <!--android:padding="12dp"-->
                    <!--android:background="@drawable/help_round"/>-->

                    <!--<EditText-->
                    <!--android:id="@+id/des_audio"-->
                    <!--android:layout_marginTop="15dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="@dimen/normal_text_size"-->
                    <!--android:hint="Description Of Audio"-->
                    <!--android:padding="12dp"-->
                    <!--android:background="@drawable/help_round"/>-->
                    <EditText
                        android:id="@+id/des_audio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/help_round"
                        android:gravity="top|left"
                        android:hint="Brief description of the Audio"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:maxWidth="180dip"
                        android:minWidth="20.0dip"
                        android:padding="12dp"
                        android:scrollHorizontally="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size" />

                    <EditText
                        android:id="@+id/audio_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/help_round"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/upload"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Upload Your Audio"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="12dp"
                        android:textSize="@dimen/normal_text_size" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_marginTop="13dp"
                        android:textSize="18sp"
                        android:text="or Click below to record"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgOk"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/seekBar"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@+id/imgdelete"
                            android:layout_toEndOf="@+id/imgdelete"
                            android:src="@drawable/ic_ok"
                            android:visibility="gone"
                            android:layout_marginRight="5dp" />

                        <ImageView
                            android:id="@+id/imgdelete"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/seekBar"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@+id/imgPlay"
                            android:layout_toEndOf="@+id/imgPlay"
                            android:src="@drawable/ic_delete"
                            android:visibility="gone"
                            android:layout_marginRight="5dp" />
                        <ImageView
                            android:id="@+id/imgPlay"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/seekBar"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="15dp"
                            android:paddingLeft="5dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                           android:layout_toRightOf="@+id/imgRecord"
                            android:layout_toEndOf="@+id/imgRecord"
                            android:src="@drawable/play_blue"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgRecord"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/seekBar"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"

                            android:src="@drawable/record_image"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/seekBar"
                            android:layout_toStartOf="@+id/imgPlay"
                            android:layout_toLeftOf="@+id/imgPlay"
                            android:padding="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/submit"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="38dp"
                        android:layout_gravity="center"
                        android:background="@drawable/help_submit"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>
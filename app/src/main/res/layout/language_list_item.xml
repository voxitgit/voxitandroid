<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="120dp">
    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="120dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:layout_width="110dp"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="120dp">

                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:layout_width="110dp"
                    android:id="@+id/itemImage"
                    android:layout_height="120dp"
                    app:siShape="@drawable/rounded_rect"
                    android:src="@drawable/logo_vector"
                    app:siSquare="true"/>

                <!--<TextView-->
                    <!--android:id="@+id/tvTitle"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="60dp"-->
                    <!--android:layout_marginRight="19dp"-->
                    <!--android:layout_marginLeft="9dp"-->
                    <!--android:padding="2dp"-->
                    <!--android:inputType="textCapWords"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:background="@drawable/textround_corner"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="10dp"-->
                    <!--android:text="" />-->

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/small_margin_value"
            android:layout_marginRight="@dimen/normal_margin_value"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="9dp"
        android:padding="2dp"
        android:inputType="textCapWords"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:text="texttttt" />

</LinearLayout>
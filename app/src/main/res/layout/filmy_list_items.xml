<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header_layout"
        layout="@layout/search_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:layout_marginBottom="@dimen/mbig_margin_value"
        android:orientation="vertical">
        <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_margin_value"
            android:layout_marginRight="@dimen/big_margin_value"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card_list_items"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                            android:id="@+id/itemImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            app:siShape="@drawable/rounded_rect"
                            app:siSquare="true" />

                    </android.support.v7.widget.CardView>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/big_margin_value"
                android:layout_marginRight="@dimen/big_margin_value"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height"
                    android:text=""
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/followtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/follow_btn"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="-4dp"
                            android:text="followers"
                            android:visibility="invisible"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/followtext"
                            android:padding="2dp"
                            android:text="Followers"
                            android:visibility="gone"
                            android:textSize="15dp" />

                        <Button
                            android:id="@+id/follow_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_weight="0.6"
                            android:background="@drawable/rounded_rect"
                            android:text="Follow"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <!--<TextView-->
            <!--android:id="@+id/countTv"-->
            <!--android:visibility="gone"-->
            <!--android:layout_marginTop="@dimen/small_margin_value"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_list_items"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/big_margin_value"
            android:layout_marginTop="@dimen/big_margin_value"
            android:layout_marginRight="@dimen/big_margin_value"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/album_title"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="All"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/comedy_header_layout"
            android:layout_marginLeft="@dimen/big_margin_value"
            android:layout_marginTop="@dimen/normal_margin_value10"
            android:layout_marginRight="@dimen/big_margin_value"
            android:layout_marginBottom="@dimen/mbig_margin_value"
            android:scrollbars="vertical" />
        <!--</LinearLayout>-->
        <!--</ScrollView>-->
    </LinearLayout>


    <include
        layout="@layout/layout_mini_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_margin_value"
        android:layout_marginTop="@dimen/large_big_margin_value"
        android:gravity="left">
        <TextView
            android:id="@+id/logo"
            android:layout_marginLeft="@dimen/normal_margin_value10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/large_big_margin_value"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/dislike"
            android:text="Report abuse"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/big_margin_value"
        android:layout_marginRight="@dimen/normal_margin_value10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_big_margin_value"
        android:gravity="center_horizontal">
        <View
            android:id="@+id/vDottedLine"
            android:background="@drawable/dotted"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/normal_margin_value10"
            android:layout_height="1.4dp"
            android:layerType="software" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/big_margin_value"
        android:layout_marginRight="@dimen/big_margin_value"
        android:layout_marginTop="@dimen/large_big_margin_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
        <Button
            android:id="@+id/sexual"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_outline_btn"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="@dimen/small_text_size"
            android:layout_weight="1"
            android:text="Sexual"/>
        <Button
            android:id="@+id/caste"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textSize="@dimen/small_text_size"
            android:background="@drawable/rounded_outline_btn"
            android:gravity="center"
            android:text="Caste discrimination" />
    </LinearLayout>
    <LinearLayout
    android:layout_marginLeft="@dimen/big_margin_value"
    android:layout_marginRight="@dimen/big_margin_value"
    android:layout_marginTop="@dimen/large_big_margin_value"
    android:id="@+id/laytbtns"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:id="@+id/child_abuse"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:background="@drawable/rounded_outline_btn"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textSize="@dimen/small_text_size"
        android:layout_weight="1"
        android:text="Child abuse"/>
    <Button
        android:id="@+id/violence"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_outline_btn"
        android:gravity="center"
        android:textSize="@dimen/small_text_size"
        android:text="Violence" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_margin_value"
        android:layout_marginTop="@dimen/large_big_margin_value"
        android:gravity="left">
        <TextView
            android:id="@+id/logo1"
            android:layout_marginLeft="@dimen/normal_margin_value10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/large_big_margin_value"
            android:text="Others"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/large_big_margin_value"
        android:layout_marginLeft="@dimen/big_margin_value"
        android:layout_marginRight="@dimen/big_margin_value"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/big_margin_value"
            android:layout_marginRight="@dimen/big_margin_value"
            android:layout_marginTop="@dimen/normal_margin_value10"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/normal_margin_value10"
        android:layout_marginLeft="@dimen/big_margin_value"
        android:layout_marginRight="@dimen/big_margin_value"
        android:layout_marginBottom="@dimen/big_margin_value"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/rounded_rect"
            android:text="Send"
            />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:theme="@style/AppTheme.NoActionBar"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    android:popupMenuStyle = "@style/popupMenuStyle"
    android:textAppearanceLargePopupMenu="@style/myPopupMenuTextAppearanceSmall"
    app:popupTheme="@style/popupMenuStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left"
            android:background="@drawable/ic_right"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/tvHeaderIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:src="@drawable/drawer_icon" />
            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Search Audio"
                android:textSize="16dp"
                android:visibility="gone"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/big_margin_value"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLanguage">
                <TextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:text="Language"
                    android:layout_marginLeft="@dimen/big_margin_value"
                    />
                <ImageView
                    android:id="@+id/downIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/icon3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvgenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/genre"
                    android:text="Genre"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/big_margin_value"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/downIcon_g"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/icon3" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            >
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:src="@drawable/search" />
            <ImageView
                android:id="@+id/overflow"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/floating_menu"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.Toolbar>